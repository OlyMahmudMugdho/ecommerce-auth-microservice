
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    name      String
    email     String
    password  String
    phone     String   @default("")
    role      String   @default("customer")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
